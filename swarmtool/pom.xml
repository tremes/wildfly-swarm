<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.wildfly.swarm</groupId>
    <artifactId>bom-parent</artifactId>
    <version>1.0.0.CR1-SNAPSHOT</version>
    <relativePath>../</relativePath>
  </parent>

  <artifactId>swarmtool</artifactId>

  <name>WildFly Swarm: SwarmTool</name>
  <description>WildFly Swarm: SwarmTool</description>

  <packaging>jar</packaging>

  <properties>
    <uberjar.name>swarmtool-standalone</uberjar.name>
    <uberjar.fullname>${uberjar.name}-${project.version}</uberjar.fullname>
  </properties>

  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <configuration>
          <finalName>${uberjar.fullname}</finalName>
          <transformers>
            <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
              <mainClass>org.wildfly.swarm.swarmtool.Main</mainClass>
            </transformer>
          </transformers>
        </configuration>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <!-- <plugin>
       <groupId>org.codehaus.mojo</groupId>
       <artifactId>exec-maven-plugin</artifactId>
       <executions>
         <execution>
           <id>generate-executable</id>
           <phase>package</phase>
           <goals>
             <goal>exec</goal>
           </goals>
         </execution>
       </executions>
       <configuration>
         <executable>src/main/assembly/genexe.sh</executable>
       </configuration>
     </plugin> -->
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.wildfly.swarm</groupId>
      <artifactId>fraction-list</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>org.wildfly.swarm</groupId>
      <artifactId>tools</artifactId>
      <exclusions>
        <exclusion>
          <groupId>org.jboss.spec.javax.sql</groupId>
          <artifactId>jboss-javax-sql-api_7.0_spec</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.wildfly.swarm</groupId>
      <artifactId>arquillian-resolver</artifactId>
    </dependency>
    <dependency>
      <groupId>net.sf.jopt-simple</groupId>
      <artifactId>jopt-simple</artifactId>
    </dependency>

  </dependencies>

  <profiles>
    <profile>
      <id>deploy-snapshot-bom</id>
      <activation>
        <!-- will be automatically deactivated when the release profile below is activated -->
        <activeByDefault>true</activeByDefault>
      </activation>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-deploy-plugin</artifactId>
            <executions>
              <execution>
                <id>deploy-generated-bom</id>
                <phase>deploy</phase>
                <goals>
                  <goal>deploy-file</goal>
                </goals>
                <configuration>
                  <packaging>jar</packaging>
                  <repositoryId>${project.distributionManagement.snapshotRepository.id}</repositoryId>
                  <url>${project.distributionManagement.snapshotRepository.url}</url>
                  <file>${project.build.directory}/${uberjar.fullname}.jar</file>
                  <groupId>${project.groupId}</groupId>
                  <artifactId>${uberjar.name}</artifactId>
                  <version>${project.version}</version>
                  <generatePom>true</generatePom>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>

    <profile>
      <id>release</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-gpg-plugin</artifactId>
            <executions>
              <execution>
                <id>deploy-generated-bom</id>
                <phase>deploy</phase>
                <goals>
                  <goal>sign-and-deploy-file</goal>
                </goals>
                <configuration>
                  <packaging>jar</packaging>
                  <repositoryId>${project.distributionManagement.repository.id}</repositoryId>
                  <url>${project.distributionManagement.repository.url}</url>
                  <file>${project.build.directory}/${uberjar.fullname}.jar</file>
                  <groupId>${project.groupId}</groupId>
                  <artifactId>${uberjar.name}</artifactId>
                  <version>${project.version}</version>
                  <generatePom>true</generatePom>
                  <sources>${project.build.directory}/${project.artifactId}-${project.version}-sources.jar</sources>
                  <javadoc>${project.build.directory}/${project.artifactId}-${project.version}-javadoc.jar</javadoc>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
